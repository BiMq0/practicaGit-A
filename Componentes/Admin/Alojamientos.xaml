<UserControl x:Class="chaski_tours_desk.Componentes.Admin.Alojamientos"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:chaski_tours_desk.Componentes"
             mc:Ignorable="d" 
             d:DesignWidth="1280" d:Height="720"
             Loaded="Alojamiento_Loaded">
    <UserControl.Resources>
        <!-- Estilo para CheckBox con marca de verificación redondeada -->
        <Style x:Key="RoundCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#333333"/>
            <!-- Color del texto -->
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <!-- Parte visual del Check (redondeado) -->
                            <Grid Width="20" Height="20" Margin="0,0,5,0">
                                <Ellipse x:Name="outerCircle"
                                     Width="18"
                                     Height="18"
                                     Stroke="#FF3F51B5"
                                     StrokeThickness="2"
                                     Fill="Transparent"/>
                                <Path x:Name="checkMark"
                                  Width="12"
                                  Height="12"
                                  Stretch="Fill"
                                  Fill="Transparent"
                                  Data="M 0 6 L 6 12 L 12 0"
                                  Stroke="#FF3F51B5"
                                  StrokeThickness="2"
                                  Visibility="Collapsed"/>
                            </Grid>
                            <!-- Texto del CheckBox -->
                            <ContentPresenter VerticalAlignment="Center"/>
                        </StackPanel>
                        <!-- Triggers para estados -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="checkMark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="outerCircle" Property="Fill" Value="#FFE8EAF6"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="outerCircle" Property="Stroke" Value="#FF5C6BC0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid Background="#FAE4BC" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Filtros superiores -->
        <StackPanel Orientation="Horizontal" Margin="20,0" VerticalAlignment="Center">
            <Label Content="Alojamientos" Style="{StaticResource Titulo}" MinWidth="400"/>

            <!-- CheckBoxes de estado -->
            <StackPanel Orientation="Horizontal" Margin="20,0" VerticalAlignment="Center">
                <CheckBox x:Name="chkActivos" 
                  Content="Activos" 
                  Style="{StaticResource RoundCheckBoxStyle}" 
                  IsChecked="True" 
                  Checked="Filtros_Changed" 
                  Unchecked="Filtros_Changed"/>

                <CheckBox x:Name="chkInactivos" 
                  Content="Inactivos" 
                  Style="{StaticResource RoundCheckBoxStyle}" 
                  Margin="10,0,0,0" 
                  Checked="Filtros_Changed" 
                  Unchecked="Filtros_Changed"/>
            </StackPanel>

            <!-- Barra de búsqueda -->
            <Border Style="{StaticResource BordeBusqueda}" Margin="20,0">
                <TextBox x:Name="txbBusqueda" Style="{StaticResource txbBusqueda}" 
         TextChanged="txbBusqueda_TextChanged"/>
            </Border>

            <!-- Botón agregar -->
            <Border Style="{StaticResource BordeBotones}">
                <Button Style="{StaticResource SecondaryButtonStyle}" Click="AbrirFormulario_Click"/>
            </Border>
        </StackPanel>

        <!-- DataGrid -->
        <ScrollViewer Margin="20,10,20,0" Grid.Row="1">
            <DataGrid x:Name="tbl_Alojamientos" AutoGenerateColumns="False"
             MouseDoubleClick="tbl_Alojamientos_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding id_alojamiento}" Width="*"/>
                    <DataGridTextColumn Header="Nombre" Binding="{Binding nombre_aloj}" Width="*"/>
                    <DataGridTextColumn Header="Estrellas" Binding="{Binding nro_estrellas}" Width="*"/>
                    <DataGridTextColumn Header="Habitaciones" Binding="{Binding nro_habitaciones}" Width="*"/>
                    <DataGridCheckBoxColumn Header="Activo" Binding="{Binding Activo}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>
    </Grid>
</UserControl>