<UserControl x:Class="chaski_tours_desk.Ventanas.UserLayout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:chaski_tours_desk.Ventanas"
        xmlns:componentes="clr-namespace:chaski_tours_desk.Componentes.User"
        mc:Ignorable="d"
         d:Height="720" d:Width="1280" Loaded="UserControl_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <componentes:ListadoSitios x:Name="listadoSitios" Grid.Column="0" Visibility="Hidden" Grid.ColumnSpan="3" />

        <componentes:ListadoTours  x:Name="listadoTours" Grid.Column="0" Visibility="Hidden" Grid.ColumnSpan="3" />



        <componentes:Landing x:Name="landing" Grid.Column="1" Visibility="Visible"/>

        <componentes:VistaCategorias x:Name="vistaCategorias" Grid.Column="1" Visibility="Collapsed"/>

        <componentes:VistaDepartamentos x:Name="vistaDepartamentos" Grid.Column="1" Visibility="Collapsed"/>
        
        <componentes:DatosSitio x:Name="datosSitio" Grid.Column="0" Visibility="Hidden" Grid.ColumnSpan="3"/>
        
        
        <componentes:DatosTour x:Name="datosTour" Grid.Column="0" Visibility="Hidden" Grid.ColumnSpan="3"/>

        <Border Style="{StaticResource BordeBotonesUser}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0 0 40 20" Width="150" Grid.Column="2">
            <Button x:Name="btnReservar" Content="Reserva ahora!" Style="{StaticResource UserButtonStyle}" Width="150" Click="btnReservar_Click" FontWeight="Bold"/>
        </Border>
    </Grid>
</UserControl>
